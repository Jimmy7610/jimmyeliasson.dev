          </a>
          <a href="https://linkedin.com/in/jimmyeliasson" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-primary transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-text-secondary hover:text-text-primary" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pt-4 border-t border-glass-border">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block nav-link my-1',
            { 'nav-link-active': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
          ]}
          data-nav-key={item.key}
        >
          <span class="nav-label">{item.key}</span>
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  import { getLang, setLang, t } from '../i18n';
  
  function updateNavLabels() {
    const lang = getLang();
    document.querySelectorAll('[data-nav-key]').forEach((el) => {
      const key = el.getAttribute('data-nav-key');
      const label = el.querySelector('.nav-label');
      if (key && label) {
        label.textContent = t(`nav.${key}`, lang);
      }
    });
    
    // Update active language button
    const svBtn = document.getElementById('lang-sv');
    const enBtn = document.getElementById('lang-en');
    
    if (svBtn && enBtn) {
      if (lang === 'sv') {
        svBtn.classList.add('bg-cyan-primary', 'text-glass-dark');
        svBtn.classList.remove('text-text-secondary');
        enBtn.classList.remove('bg-cyan-primary', 'text-glass-dark');
        enBtn.classList.add('text-text-secondary');
      } else {
        enBtn.classList.add('bg-cyan-primary', 'text-glass-dark');
        enBtn.classList.remove('text-text-secondary');
        svBtn.classList.remove('bg-cyan-primary', 'text-glass-dark');
        svBtn.classList.add('text-text-secondary');
      }
    }
  }
  
  // Language toggle handlers
  document.getElementById('lang-sv')?.addEventListener('click', () => {
    setLang('sv');
    updateNavLabels();
  });
  
  document.getElementById('lang-en')?.addEventListener('click', () => {
    setLang('en');
    updateNavLabels();
  });
  
  // Mobile menu toggle
  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });
  
  // Update on load
  updateNavLabels();
  
  // Update on language change
  window.addEventListener('langchange', updateNavLabels);
</script>

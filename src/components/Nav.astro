---
const navItems = [
  { key: 'home', href: '/' },
  { key: 'projects', href: '/projects' },
  { key: 'buildLog', href: '/build-log' },
  { key: 'ideaLab', href: '/lab' },
  { key: 'about', href: '/about' },
];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 glass-card border-b border-glass-border">
  <div class="container-custom py-4">
    <div class="flex items-center justify-between">
      <!-- Logo / Name -->
      <a href="/" class="text-2xl font-display font-bold text-gradient">
        JE
      </a>
      
      <!-- Nav Links -->
      <div class="hidden md:flex items-center gap-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'nav-link',
              { 'nav-link-active': currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
            ]}
            data-nav-key={item.key}
          >
            <span class="nav-label">{item.key}</span>
          </a>
        ))}
      </div>
      
      <!-- Language Toggle & Social -->
      <div class="flex items-center gap-4">
        <div id="language-toggle" class="flex items-center gap-1 text-sm font-medium">
          <button
            id="lang-sv"
            class="px-3 py-1 rounded transition-colors duration-200"
            aria-label="Switch to Swedish"
          >
            SV
          </button>
          <span class="text-text-muted">|</span>
          <button
            id="lang-en"
            class="px-3 py-1 rounded transition-colors duration-200"
            aria-label="Switch to English"
          >
            EN
          </button>
        </div>
        
        <!-- Social icons -->
        <div class="hidden sm:flex items-center gap-3 text-text-secondary">
          <a href="https://github.com/jimmyeliasson" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-primary transition-colors" aria-label="GitHub">

---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getCollection } from 'astro:content';

if (import.meta.env.PROD) {
  return Astro.redirect('/');
}

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => b.data.year - a.data.year);
---

<AdminLayout title="Projekt">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-3xl font-display font-bold text-text-primary">Projekt</h2>
      <a href="/admin/projects/new" class="px-6 py-3 bg-gradient-to-r from-cyan-primary to-green-acid text-glass-dark font-semibold rounded-lg hover:shadow-lg hover:shadow-cyan-primary/30 transition-all duration-300 transform hover:-translate-y-0.5">
        + Nytt Projekt
      </a>
    </div>

    <div class="space-y-4">
      {sortedProjects.map(project => (
        <div class="bg-glass-surface p-6 rounded-glass border border-glass-border hover:border-cyan-primary transition-all duration-300 group">
          <div class="flex items-start justify-between gap-6">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-xl font-display font-semibold text-text-primary group-hover:text-cyan-primary transition-colors duration-300">
                  {project.data.title.sv}
                </h3>
                <span class={`px-2 py-1 text-xs font-semibold rounded-md ${
                  project.data.status === 'active' ? 'bg-green-acid/20 text-green-acid border border-green-acid/30' : 'bg-text-muted/20 text-text-muted border border-text-muted/30'
                }`}>
                  {project.data.status}
                </span>
              </div>
              <p class="text-text-secondary text-sm">{project.data.description.sv}</p>
            </div>

            <div class="flex gap-2">
              <a href={`/admin/projects/${project.slug}`} class="p-2 bg-glass-dark border border-glass-border rounded-lg hover:border-cyan-primary hover:text-cyan-primary transition-all duration-300" title="Redigera">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </a>
              <button data-delete-project={project.slug} class="p-2 bg-glass-dark border border-glass-border rounded-lg hover:border-red-500 hover:text-red-500 transition-all duration-300" title="Ta bort">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</AdminLayout>

<script>
  document.querySelectorAll('[data-delete-project]').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const slug = (e.currentTarget as HTMLElement).getAttribute('data-delete-project');
      
      if (!confirm(`Är du säker på att du vill ta bort projektet "${slug}"?`)) {
        return;
      }
      
      try {
        const response = await fetch(`/api/projects/${slug}`, {
          method: 'DELETE'
        });
        
        if (response.ok) {
          window.location.reload();
        } else {
          const error = await response.json();
          alert(`Kunde inte ta bort projektet: ${error.error || 'Unknown error'}`);
        }
      } catch (error) {
        alert('Ett fel uppstod');
        console.error(error);
      }
    });
  });
</script>

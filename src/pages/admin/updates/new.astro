---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import UpdateForm from '../../../components/admin/UpdateForm';

if (import.meta.env.PROD) {
  return Astro.redirect('/');
}
---

<AdminLayout title="Ny Uppdatering">
  <div class="max-w-4xl">
    <div class="mb-6">
      <a 
        href="/admin/updates" 
        class="text-green-acid hover:text-cyan-primary transition-colors duration-300 inline-flex items-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Tillbaka till bygglogg
      </a>
    </div>

    <h2 class="text-3xl font-display font-bold mb-6 text-text-primary">Skapa Ny Uppdatering</h2>
    
    <UpdateForm client:load mode="create" />
  </div>
</AdminLayout>
